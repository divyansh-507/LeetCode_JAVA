class Solution {
    public int[] twoSum(int[] nums, int target) {
        HashMap<Integer,Integer> mp = new HashMap<Integer,Integer>();

        int[] arr = new int[2];
        for(int i=0;i<nums.length;i++){
            if(mp.get(target-nums[i]) != null){
                arr[0] = i;
                arr[1] = mp.get(target-nums[i]);
                return arr;
            }
            mp.put(nums[i],i);
        }
        return arr;
    }
}
